---
import AuthorLayout from "@layouts/AuthorLayout.astro";
import { fall2024 } from "@editions/fall2024";
import { getCurrentAuthor } from "@utils/getCurrentAuthor";
import Groom from "./groom.html";
---

<AuthorLayout
  authors={fall2024}
  author={getCurrentAuthor(fall2024, "groom")}
  slug="fall2024"
  issueTitle={"Issue III: Fall 2024"}
  issue={"fall2024"}
>
  <Groom />
</AuthorLayout>

<style>

:global(.tab) { text-indent:40px; }
:global(.text.text > .author-img) {
float: none;
margin-inline: auto;
}

:global(.justify) {
  text-justify: inter-word;
}
  :root {
    --clr-bg-primary: var(--clr-bg-fall2024);
  }
</style>
