---
import SiteLayout from "src/layouts/SiteLayout.astro";
import MainLayout from "src/layouts/MainLayout.astro";
import SocialNav from "@components/SocialNav.astro";
import { Image } from "astro:assets";
import etteEnvelope from "@assets/etteenvelope.webp";
import { winter2024 } from "@editions/winter2024";
---

<SiteLayout title="Contact | -ette review">
  <MainLayout
    issueTitle={"Issue II: Winter 2024"}
    issue={"winter2024"}
    authors={winter2024}
  >
    <div class="container-primary">
      <div class="text">
        <section>
          <p>
            Please sign up for our mailing list by writing to <a
              href="mailto:mailinglist@ettereview.com"
              class="link">mailinglist@ettereview.com</a
            >. Just put "subscribe" in the header. Thanks! We'll only send you <span
              class="italic">-ette</span
            > updates and submission calls.
          </p>
          <SocialNav
            facebookUrl={"https://www.facebook.com/profile.php?id=100092343586387"}
            twitterUrl={"https://twitter.com/EtteReview"}
            instagramUrl={"https://www.instagram.com/ettereview"}
          />
        </section>
      </div>
      <Image
        src={etteEnvelope}
        alt="Envelope with 'ette' written on the back"
        width="400"
      />
    </div>

    <style>
      :root {
        --clr-bg-primary: var(--clr-bg-fall2024);
      }
    </style>
    

  </MainLayout>
</SiteLayout>
