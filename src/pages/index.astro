---
import { Image } from "astro:assets";

import SiteLayout from "../layouts/SiteLayout.astro";
import localEtteLogo from "@assets/ettelogo.webp";
---

<SiteLayout title="hi" description="hi">
  <div class="splash-page">
    <header class="header">
      <h1 class="heading">
        <Image src={localEtteLogo} alt="Ette literary magizine logo." />
      </h1>
      <a href="/Winter2024" class="subheading | line-height-1">Winter 2024</a>
    </header>
    <main class="splash-container">
      <section class="ette-definition">
        <p>
          <dfn>-ette</dfn><br />
          noun, suffix 1: little one<br />
          <span class="italic"
            >cassette, roulette, planchette<br />
            lunette, baguette</span
          >
        </p>
      </section>
    </main>
  </div>
</SiteLayout>

<style lang="scss">
  .splash-page {
    background-image: url("../assets/lambette.webp");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 20% 30%;
    min-height: 1169px;
  }
  .header {
    display: block;
    padding-inline: 16px;
    padding-top: 16px;
  }
  .heading {
    display: block;
    width: min(100%, 400px);
    > :global(img) {
      display: block;
      height: auto;
      width: 100%;
    }
  }
  .subheading {
    display: inline-block;
    margin-left: min(76px, 17vw);
    margin-top: 20px;
    font-size: var(--fs-600);
  }
  .ette-definition {
    font-size: var(--fs-root);
    position: absolute;
    bottom: max(25%, 100px);
    left: min(15%, 250px);
  }
</style>
