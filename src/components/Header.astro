---
import { Image } from "astro:assets";
import etteLogo from "@assets/ettelogo.webp";
import Nav from "./Nav.astro";
---

<header class="header">
  <h1 class="ette-logo">
    <a href="/winter2024">
      <Image
        alt="Ette literary magizine logo."
        src={etteLogo}
        width="506"
        height="150"
      />
    </a>
  </h1>
  <Nav />
</header>

<style>
  .header {
    display: grid;
    padding-bottom: 0;
  }
  h1 {
    padding: 1rem;
  }
  a {
max-width: min(100%, 405px);
  }
</style>
