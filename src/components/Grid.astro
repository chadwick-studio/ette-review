---
import Card from "./Card.astro";

const { issue, writers } = Astro.props;
---

<ul class="grid">
  {writers.map((writer) => <Card writer={writer} issue={issue} />)}
</ul>

<style>
  .grid {
    --_card-size: 15.625rem;
    display: grid;
    grid-template-columns: var(--_card-size);
    gap: 0.75rem;
    grid-auto-rows: 15.625rem;
    width: fit-content;
    margin-inline: auto;
    margin-block: 2rem;
  }
  @media (min-width: 548px) {
    .grid {
      grid-template-columns: repeat(2, var(--_card-size));
    }
  }

  @media (min-width: 814px) {
    .grid {
      margin-left: 16rem;
      grid-template-columns: repeat(3, var(--_card-size));
    }
  }
</style>
